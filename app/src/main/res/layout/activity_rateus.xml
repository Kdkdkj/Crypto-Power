<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_goneMarginTop="20dp">



    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center|start"
                android:layout_height="match_parent"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/circle"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:id="@+id/toolbar_title" />

                <TextView
                    android:textColor="@color/white"
                    android:fontFamily="@font/proxima_semi_bold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:text="Rate Us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="#802a3543"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_parental_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="Rate Us"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_div"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:visibility="gone"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_ratingbar"
                    tools:ignore="ContentDescription" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_ratingbar"
                    android:layout_marginStart="10dp"
                    tools:ignore="ContentDescription" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_ratingbar"
                    android:layout_marginStart="10dp"
                    tools:ignore="ContentDescription" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_ratingbar"
                    android:layout_marginStart="10dp"

                    tools:ignore="ContentDescription" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    app:srcCompat="@drawable/ic_ratingbar"
                    tools:ignore="ContentDescription" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/white"
                android:text="@string/rate_us"
                android:layout_marginTop="10dp"
                android:textSize="14sp" />


            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"
                tools:ignore="UselessParent">


                <Button
                    android:id="@+id/btn_rateus"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/logout_btn_effect"
                    android:tag="1"
                    android:text="Rate Us"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:gravity="center"
                    tools:ignore="ButtonStyle,RtlHardcoded" />

                <Button
                    android:id="@+id/btn_later"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/blue_btn_effect"
                    android:tag="2"
                    android:gravity="center"
                    android:layout_gravity="right|center_vertical"
                    android:text="Remind Me Later "
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:ignore="ButtonStyle,ObsoleteLayoutParam,RtlHardcoded" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>